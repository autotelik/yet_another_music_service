$("#messages_container").html("<%= j render(partial: 'shared/messages') %>");

<% if(@album_track.errors.blank?) %>
  // place track on the album
  $('#target-for-track-drop-insertion-point-<%= @album_track.album.id %>').append("<%= j render(partial: 'tracks/sortable_tracks_row', locals: { sortable_with_track: @album_track } ) %>");

  $('#track_selection_options_form_group').html("<%= j render partial: 'shared/track_selection_options' %>");

<% end %>