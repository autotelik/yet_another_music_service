<!DOCTYPE html>
<html>
<head>
  <%= render 'shared/head' %>

  <%= yield(:head_extension) %>

  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  <%= yield(:head_stylesheet_extension) %>

  <%= csrf_meta_tags %>

  <!--
  <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js" type="text/javascript"></script>
  <script type="text/javascript">WebFont.load({ google: { families: ["Open Sans:300,300italic,400,400italic,600,600italic,700,700italic,800,800italic", "Inconsolata:400,700","Roboto:300,regular,500"]  }});</script>

  <link href="https://fonts.googleapis.com/css?family=Karla&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/fef18d52e8.js" crossorigin="anonymous"></script>
  -->

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>

<body>

  <div id="app-container">

    <div id="app-header">
      <%= render 'layouts/navigation' %>
        <%= yield :audio_player_in_navbar %>
    </div>

    <div id="app-body">

      <div id="messages_container" class="container-fluid p-0 m-0">
        <%= render 'shared/messages' %>
      </div>

      <div data-settings-value="<%= raw yams_player_settings if local_assigns.has_key?(:yams_player_settings) %>" data-controller="yams-audio-engine">
        <%= yield %>

        <%= yield(:body_extension) %>
       </div>
    </div>


    <div id="app-footer">
      <%= render 'shared/footer' %>
    </div>

  </div>

</body>
</html>
