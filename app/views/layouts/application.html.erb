<!DOCTYPE html>
<html>
<head>
  <%= render 'shared/head' %>

  <%= yield(:head_extension) %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>

  <%= yield(:head_stylesheet_extension) %>

  <%= csrf_meta_tags %>

  <!-- webflow -->
  <!-- [if lte IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif] -->

  <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js" type="text/javascript"></script>
  <script type="text/javascript">WebFont.load({  google: {    families: ["Open Sans:300,300italic,400,400italic,600,600italic,700,700italic,800,800italic","Inconsolata:400,700","Roboto:300,regular,500"]  }});</script>
  <!-- [if lt IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js" type="text/javascript"></script><![endif] -->
  <script type="text/javascript">!function(o,c){var n=c.documentElement,t=" w-mod-";n.className+=t+"js",("ontouchstart"in o||o.DocumentTouch&&c instanceof DocumentTouch)&&(n.className+=t+"touch")}(window,document);</script>
  <!-- end webflow -->
</head>

<body>

  <div id="app-container">

    <div id="app-header">
      <%= render 'layouts/navigation' %>

      <%= yield :audio_player_in_navbar %>

      <!-- player insertion point via UJS -->
      <span id="navbar-audio-player-insertion-point" class="col-12 w-hidden"></span>
    </div>

    <div id="app-body">

      <div id="messages_container" class="container-fluid p-0 m-0">
        <%= render 'shared/messages' %>
      </div>

      <%= yield %>

      <%= yield(:body_extension) %>
    </div>

    <div id="app-footer">
      <%= render 'shared/footer' %>
    </div>

  </div>

</body>
</html>
